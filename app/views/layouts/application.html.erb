<!DOCTYPE html>
<html>
  <head>
    <title>SpeakUp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= include_gon %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", type: "module" %>
    <script src="https://kit.fontawesome.com/1c1f3980e3.js" crossorigin="anonymous"></script>
  </head>

  <body class="flex flex-col h-screen bg-base-100">
    <header class="rounded">
      <% if user_signed_in? %>
        <%= render 'shared/header' %>
      <% else %>
        <%= render 'shared/before_login_header' %>
      <% end %>
    </header>
    <main class="flex-grow">
      <div class="lg:ml-64 md:ml-20">
        <div id="flash">
          <%= render "shared/flash_messages" %>
        </div>
        <%= yield %>
        <input type="checkbox" id="my_modal_7" class="modal-toggle hidden"  />
        <div class="modal" role="dialog">
          <div class="modal-box w-96">
            <%= render "words/new" %>
          </div>
          <label class="modal-backdrop" for="my_modal_7">Close</label>
        </div>
      </div>
    </main>
    <footer class="footer footer-center p-10 base-100 text-base-300 rounded mt-auto gap-y-1">
      <div class="lg:ml-64 md:ml-20 hidden md:block">
        <%= render 'shared/footer' %>
      </div>
    </footer>
  </body>
</html>

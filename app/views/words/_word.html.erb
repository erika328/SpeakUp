<div data-word-id="<%= word.id %>" data-word-japanese="<%= word.meaning %>" data-word-english="<%= word.english_word %>" data-word-example="<%= word.example %>" data-word-part-of-speech="<%= word.part_of_speech %>" class="hover:cursor-pointer card card-modal h-14 w-48 min-[320px]:w-[150px] bg-[#bae8e8] shadow-xl items-center text-center justify-center">
  <div>
    <h2 class="text-[#172c66] text-sm font-semibold"><%= word.english_word %></h2>
  </div>
</div>

<dialog id="my_modal_<%= word.id %>" class="modal">
  <div class="flex items-center justify-center">
        <div class="modal-box min-w-80 py-6 px-10 shadow-md space-y-5 m-5">
        </div>
  </div>
    <form method="dialog" class="modal-backdrop close-button" style="position: fixed; width: 100vw; height: 100vh;">
      <button style="width: 100%; height: 100%;">close</button>
    </form>
</dialog>
<%= javascript_include_tag 'modal', defer: true %>
<% @words.each do |word| %>
  <div data-word-id="<%= word.id %>" data-word-japanese="<%= word.japanese_meaning%>" data-word-english="<%= word.english_word %>" class="card w-52 bg-base-100 ring-1 shadow-xl items-center text-center">
    <div class="card-body">
      <h2 class="card-title"><%= word.english_word %></h2>
    </div>
  </div>
<% end %>

<dialog id="my_modal_2" class="modal">
  <div class="flex items-center justify-center">
    <div class="bg-white py-6 rounded-lg px-10 w-96 shadow-md space-y-5 text-gray-600">
      <%= turbo_frame_tag "wordId" do %>
      <div class="modal-box w-96 py-6 px-10 shadow-md space-y-5", style="position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%);"></div>
      <% end %>
    </div>
  </div>
    <form method="dialog" class="modal-backdrop close-button" style="position: fixed; width: 100vw; height: 100vh;">
      <button style="width: 100%; height: 100%;">close</button>
    </form>
</dialog>
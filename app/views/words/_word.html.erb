<div data-word-id="<%= word.id %>" data-word-japanese="<%= word.meaning %>" data-word-english="<%= word.english_word %>" data-word-example="<%= word.example %>" class="hover:cursor-pointer card card-modal h-14 w-48 min-[320px]:w-[150px] bg-[#bae8e8] shadow-xl items-center text-center justify-center">
  <div>
    <h2 class="text-[#172c66] text-sm font-semibold"><%= word.english_word %></h2>
  </div>
</div>

<dialog id="my_modal_<%= word.id %>" class="modal">
  <div class="flex items-center justify-center">
    <div class="bg-white py-6 rounded-lg px-10 w-96 shadow-md space-y-5 text-gray-600">
        <div class="modal-box w-96 py-6 px-10 shadow-md space-y-5", style="position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%);">
        </div>
    </div>
  </div>
    <form method="dialog" class="modal-backdrop close-button" style="position: fixed; width: 100vw; height: 100vh;">
      <button style="width: 100%; height: 100%;">close</button>
    </form>
</dialog>
<%= javascript_include_tag 'modal', defer: true %>